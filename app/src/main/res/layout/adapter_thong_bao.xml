<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:mode="same_level"
    app:dragEdge="right"
    android:id="@+id/swipeDeleteTB"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout_delete_TB">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18dp"
            android:background="@drawable/custom_btn_add"
            android:text="@string/txtDelete"/>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/custom_thong_bao"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/logoThongBao"
        android:src="@drawable/logodesign"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/logoThongBao"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="Bạn vừa đặt thành công đơn hàng có giá trị là 1,000,000 đ . Xin cảm ơn đã tin tưởng ."
            android:id="@+id/txtThongBao"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtThongBao"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:45:30"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/txtHour"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/10/2021"
                android:padding="5dp"
                android:textColor="@color/black"
                android:id="@+id/txtDay"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>