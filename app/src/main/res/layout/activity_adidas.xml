<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AdidasActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back"
                android:id="@+id/imgAdidasBack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtNike"
                android:textSize="30dp"
                android:id="@+id/txtTileAdidas"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/adidas"
                android:id="@+id/imgTitleAdidas"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/txtTileAdidas"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/recylerAdidas"/>
    </LinearLayout>
</layout>